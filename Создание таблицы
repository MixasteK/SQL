# Создание таблицы 
CREATE TABLE deposit
(
	id SERIAL PRIMARY KEY,
	type VARCHAR(100) NOT NULL,
	percent INTEGER NOT NULL
);


# Создание таблицы с F.key
CREATE TABLE general_table
(
	id SERIAL PRIMARY KEY,
	worker_id INTEGER REFERENCES worker(id),
  people_id INTEGER REFERENCES people(id),
  deposit_id INTEGER REFERENCES deposit(id),
	summ VARCHAR(20) NOT NULL,
  date DATE NOT NULL  
);

# обновление данных в таблице 
UPDATE general_table SET people_id = 15 WHERE id = 1;

# добавление столбца в таблицу 
ALTER TABLE worker ADD note VARCHAR(255);

# удаление таблицы
DROP TABLE people;  


